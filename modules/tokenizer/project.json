{
  "name": "tokenizer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "modules/tokenizer/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/modules/tokenizer",
        "main": "modules/tokenizer/src/index.ts",
        "tsConfig": "modules/tokenizer/tsconfig.lib.json",
        "assets": ["modules/tokenizer/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs tokenizer {args.ver} {args.tag} {args.otp}",
      "dependsOn": ["build"]
    },
    "install": {
      "command": "cd modules/tokenizer && npm install"
    }
  },
  "tags": []
}
