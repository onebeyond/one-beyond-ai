{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@one-beyond-ai/azure-openai": ["modules/azure-openai/src/index.ts"],
      "@one-beyond-ai/common": ["modules/common/src/index.ts"],
      "@one-beyond-ai/cost": ["modules/cost/src/index.ts"],
      "@one-beyond-ai/mime-type": ["modules/mime-type/src/index.ts"],
      "@one-beyond-ai/openai": ["modules/openai/src/index.ts"],
      "@one-beyond-ai/text-document-extractor": ["modules/text-document-extractor/src/index.ts"],
      "@one-beyond-ai/tokenizer": ["modules/tokenizer/src/index.ts"]
    },
    "allowJs": true
  },
  "exclude": ["node_modules", "tmp"],
  "include": []
}
